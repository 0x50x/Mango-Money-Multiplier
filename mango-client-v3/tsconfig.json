{
  "extends": "@tsconfig/recommended/tsconfig.json",

  "compilerOptions": {
    "outDir": "./lib",
    "target": "es6",
    "lib": ["es2019"],
    "strict": false,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*", "examples/example.ts", "examples/app.ts", "examples/server.ts"],
  "exclude": ["./src/**/*.test.js", "node_modules", "**/node_modules"]
}
